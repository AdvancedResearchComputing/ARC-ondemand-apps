#!/bin/bash -l

env > env.txt

pwd
#unset XDG_RUNTIME_DIR

module list

echo running on `hostname`
echo starting singularity

module load containers/singularity

singularity shell --cleanenv --env PYTHONPATH=/usr/local/lib/python3.8/dist-packages/websockify-0.9.0-py3.8.egg \
    --bind `pwd`:/cwd,/projects,/work/$USER \
    /projects/arcsingularity/ubuntu-xfce-v0.0.1.sif &
while [ ! -f ./connection.rc ]; do sleep 1; done
source connection.rc
xterm


